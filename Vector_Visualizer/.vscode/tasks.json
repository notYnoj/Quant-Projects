{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Vector Visualizer",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-g3",

        "main.cpp",
        "../cameras/target.cpp",
        "../Math Algorithms/matirx.cpp",
        "../Math Algorithms/3DVector.cpp",

        "-I.",
        "-I../cameras",
        "-I../Math Algorithms",
        "-I/opt/homebrew/include",

        "-L/opt/homebrew/lib",
        "-lglfw",

        "-framework", "OpenGL",
        "-framework", "Cocoa",
        "-framework", "IOKit",
        "-framework", "CoreVideo",
        "-framework", "CoreFoundation",

        "-o",
        "main"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
